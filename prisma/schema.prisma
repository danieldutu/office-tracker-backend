// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum UserRole {
  REPORTER
  CHAPTER_LEAD
  TRIBE_LEAD
}

model User {
  id            String            @id @default(uuid())
  email         String            @unique
  name          String
  passwordHash  String?           @map("password_hash")
  role          UserRole          @default(REPORTER)
  chapterLeadId String?           @map("chapter_lead_id")
  teamName      String?           @map("team_name")
  isFirstLogin  Boolean           @default(true) @map("is_first_login")
  avatarUrl     String?           @map("avatar_url")
  createdAt     DateTime          @default(now()) @map("created_at")
  updatedAt     DateTime          @updatedAt @map("updated_at")

  // Relations
  chapterLead     User?              @relation("ChapterLeadReports", fields: [chapterLeadId], references: [id])
  directReports   User[]             @relation("ChapterLeadReports")
  attendance      AttendanceRecord[]
  teams           UserTeam[]

  @@index([role])
  @@index([chapterLeadId])
  @@map("users")
}

model AttendanceRecord {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  date      DateTime
  status    String   // 'office', 'remote', 'absent', 'vacation'
  notes     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([date])
  @@index([userId, date])
  @@map("attendance")
}

model Team {
  id          String     @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime   @default(now()) @map("created_at")

  // Relations
  members     UserTeam[]

  @@map("teams")
}

model UserTeam {
  userId String @map("user_id")
  teamId String @map("team_id")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@id([userId, teamId])
  @@map("user_teams")
}

model Delegation {
  id            String   @id @default(uuid())
  delegatorId   String   @map("delegator_id")  // The Tribe Lead who delegates
  delegateId    String   @map("delegate_id")   // The person receiving temporary admin rights
  startDate     DateTime @map("start_date")
  endDate       DateTime @map("end_date")
  isActive      Boolean  @default(true) @map("is_active")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@index([delegateId])
  @@index([startDate, endDate])
  @@index([isActive])
  @@map("delegations")
}

model OfficeCapacity {
  id          String   @id @default(uuid())
  dayOfWeek   String   @map("day_of_week") // Monday, Tuesday, Wednesday, Thursday, Friday
  capacity    Int      // Number of available spots
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@unique([dayOfWeek])
  @@map("office_capacity")
}
